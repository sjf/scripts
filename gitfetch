if git fetch origin "$MAIN" && git rebase "origin/$MAIN"; then

  # was HEAD updated?
  if [[ "$(git rev-parse HEAD)" != "$(git rev-parse HEAD@{1})" ]]; then
    UPDATED=yes
  fi
else
  rich "[bold red]Failed to fetch and rebase[/bold red]" --print
fi
